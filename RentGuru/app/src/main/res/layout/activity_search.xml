<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:focusableInTouchMode="true"
    tools:context="wsit.rentguru.activity.SearchActivity">


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_margin="15dp"
        android:src="@drawable/ic_back"
        android:background="@null"
        />

    <ScrollView
        android:layout_below="@+id/backButton"
        android:layout_width="match_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">





    <LinearLayout
        android:id="@+id/linear_layout_search"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/search_anything"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:paddingLeft="15dp"
            android:paddingBottom="-5dp"
            android:backgroundTint="@android:color/darker_gray"
            android:hint="Search anything"/>

        <EditText
            android:id="@+id/location"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:paddingLeft="15dp"
            android:paddingBottom="-5dp"
            android:backgroundTint="@android:color/darker_gray"
            android:hint="Location"/>



    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear_layout_select_category"
        android:layout_below="@+id/linear_layout_search"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Categories"
            android:paddingLeft="15dp"
            android:textSize="20sp"
            />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/select_category"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:showDividers="middle"
               >

            </android.support.v7.widget.RecyclerView>



    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear_layout_select_color"
        android:layout_below="@+id/linear_layout_select_category"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Colors"
            android:paddingLeft="15dp"
            android:textSize="20sp"
            />



        <android.support.v7.widget.RecyclerView
            android:id="@+id/select_color"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:dividerPadding="5dp">

        </android.support.v7.widget.RecyclerView>






    </LinearLayout>



    <Button
        android:id="@+id/search_button"
        android:layout_below="@+id/linear_layout_select_color"
        android:layout_centerHorizontal="true"
        android:text="@string/action_search"
        android:background="@drawable/button_border"
        android:layout_width="200dp"
        android:layout_marginTop="20dp"
        android:layout_height="50dp" />


        </RelativeLayout>


    </ScrollView>


</RelativeLayout>
