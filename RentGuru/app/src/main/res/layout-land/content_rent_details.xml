<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/background_color"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="wsit.rentguru.activity.RentRequestOrderDetailsActivity"
    tools:showIn="@layout/activity_rent_details">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/profilePic"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/button_border"
                />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="22sp"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/profilePic"
                android:text="UserNAme"
                android:textColor="@android:color/black"
                />

            <TextView
                android:id="@+id/other_information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Other Informations"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_below="@+id/profilePic"
                android:layout_marginTop="20dp"
                />

            <View
                android:id="@+id/other_information_view"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/other_information"
                android:layout_marginTop="5dp"
                android:background="@color/colorAccent"
                />

            <LinearLayout
                android:id="@+id/user_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/other_information_view"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:textSize="14sp"
                        android:text="Contact Number"
                        android:textColor="@android:color/black"
                        android:padding="5dp"
                        />

                    <TextView
                        android:id="@+id/contact_number"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:textSize="14sp"
                        android:gravity="left"
                        android:textColor="@android:color/black"
                        android:padding="5dp"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:textSize="14sp"
                        android:text="Email"
                        android:textColor="@android:color/black"
                        android:padding="5dp"
                        />

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:textSize="14sp"
                        android:gravity="left"
                        android:textColor="@android:color/black"
                        android:padding="5dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:textSize="14sp"
                        android:text="Address"
                        android:textColor="@android:color/black"
                        android:padding="5dp"
                        />

                    <TextView
                        android:id="@+id/address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:textSize="14sp"
                        android:gravity="left"
                        android:textColor="@android:color/black"
                        android:padding="5dp"
                        />

                </LinearLayout>



            </LinearLayout>


            <TextView
                android:id="@+id/transection_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transection Details"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_below="@+id/user_information"
                android:layout_marginTop="20dp"
                />

            <View
                android:id="@+id/transection_details_view"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/transection_details"
                android:layout_marginTop="5dp"
                android:background="@color/colorAccent"
                />




            <LinearLayout
                android:id="@+id/transection_details_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/transection_details_view"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:textSize="14sp"
                        android:text="Order Info"
                        android:background="@android:color/white"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:padding="5dp"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:textSize="14sp"
                        android:gravity="left"
                        android:text="Order Details"
                        android:textStyle="bold"
                        android:background="@android:color/white"
                        android:textColor="@android:color/black"
                        android:padding="5dp"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:textSize="14sp"
                        android:text="Start Date"
                        android:background="#DCDCDC"
                        android:textColor="@android:color/black"
                        android:padding="5dp"
                        />

                    <TextView
                        android:id="@+id/start_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:textSize="14sp"
                        android:gravity="left"
                        android:background="#DCDCDC"
                        android:textColor="@android:color/black"
                        android:padding="5dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:textSize="14sp"
                        android:text="End Date"
                        android:background="@android:color/white"
                        android:textColor="@android:color/black"
                        android:padding="5dp"
                        />

                    <TextView
                        android:id="@+id/end_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:textSize="14sp"
                        android:gravity="left"
                        android:background="@android:color/white"
                        android:textColor="@android:color/black"
                        android:padding="5dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:textSize="14sp"
                        android:text="Number Of Days"
                        android:background="#DCDCDC"
                        android:textColor="@android:color/black"
                        android:padding="5dp"
                        />

                    <TextView
                        android:id="@+id/no_of_days"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:textSize="14sp"
                        android:gravity="left"
                        android:background="#DCDCDC"
                        android:textColor="@android:color/black"
                        android:padding="5dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    >

                    <TextView
                        android:id="@+id/rent_type"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:textSize="14sp"
                        android:text="Rent/Day"
                        android:background="@android:color/white"
                        android:textColor="@android:color/black"
                        android:padding="5dp"
                        />

                    <TextView
                        android:id="@+id/rent_value"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:textSize="14sp"
                        android:gravity="left"
                        android:background="@android:color/white"
                        android:textColor="@android:color/black"
                        android:padding="5dp"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:textSize="14sp"
                        android:text="Total Rent"
                        android:background="#DCDCDC"
                        android:textColor="@android:color/black"
                        android:padding="5dp"
                        />

                    <TextView
                        android:id="@+id/total_rent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:textSize="14sp"
                        android:gravity="left"
                        android:background="#DCDCDC"
                        android:textColor="@android:color/black"
                        android:padding="5dp"
                        />

                </LinearLayout>



            </LinearLayout>




        </RelativeLayout>



    </ScrollView>


</RelativeLayout>
